<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Actividades.GeneralActivity" android:orientation="vertical">

    <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:elevation="4dp"
            android:background="?attr/colorPrimary"
            android:minHeight="?attr/actionBarSize"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"

            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/Theme.AppCompat.Light"
    />
    <TextView
            android:text="Información General"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/textView14" android:gravity="center"
            android:layout_margin="5dp" android:textSize="30sp"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_margin="5sp">
        <TextView
                android:text="N° de usuarios"
                android:layout_width="107dp"
                android:layout_height="wrap_content" android:id="@+id/textView12" android:layout_weight="0.7"
                android:textSize="15sp"/>
        <TextView
                android:text="45"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/tvUsuarios" android:layout_weight="0.3"
                android:gravity="center" android:textSize="15sp"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_margin="5sp">
        <TextView
                android:text="N° de hombres"
                android:layout_width="107dp"
                android:layout_height="wrap_content" android:id="@+id/textView19" android:layout_weight="0.7"/>
        <TextView
                android:text="15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/tvHombres" android:layout_weight="0.3"
                android:gravity="center"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_margin="5sp">
        <TextView
                android:text="N° de mujeres"
                android:layout_width="107dp"
                android:layout_height="wrap_content" android:id="@+id/textView20" android:layout_weight="0.7"/>
        <TextView
                android:text="30"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/tvMujeres" android:layout_weight="0.3"
                android:gravity="center"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_margin="5sp">
        <TextView
                android:text="N° de no definidos"
                android:layout_width="107dp"
                android:layout_height="match_parent" android:id="@+id/textView21" android:layout_weight="0.7"/>
        <TextView
                android:text="20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/tvNoDef" android:layout_weight="0.3"
                android:gravity="center"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_margin="5sp">
        <TextView
                android:text="N° de Grupos"
                android:layout_width="107dp"
                android:layout_height="match_parent" android:id="@+id/textView23" android:layout_weight="0.7"/>
        <TextView
                android:text="60"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/tvGrupos" android:layout_weight="0.3"
                android:gravity="center"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_margin="5sp">
        <TextView
                android:text="N° de Rodadas"
                android:layout_width="107dp"
                android:layout_height="match_parent" android:id="@+id/textView22" android:layout_weight="0.7"/>
        <TextView
                android:text="100"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/tvRodadas" android:layout_weight="0.3"
                android:gravity="center"/>
    </LinearLayout>

</LinearLayout>